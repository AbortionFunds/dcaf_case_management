<div class="report-section">
  <h2 class="border-bottom">Past 30 days</h2>
  <div id='chart-monthly_report'></div>
  <div class="row">
    <% lines.each do |line| %>
      <div class="col-sm-4">
        <h3><%= link_to line, '#', class: 'line-header' %></h3>
        <p>Patients contacted: <strong><%= @monthly_report[line.to_sym][:patients_contacted] %></strong></p>
        <p>New patients contacted: <strong><%= @monthly_report[line.to_sym][:new_patients_contacted] %></strong></p>
        <p>Pledges sent: <strong><%= @monthly_report[line.to_sym][:pledges_sent] %></strong></p>
      </div>
    <% end %>
  </div>
</div>
